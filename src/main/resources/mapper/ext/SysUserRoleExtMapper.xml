<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.study.dao.ext.SysUserRoleExtMapper">
    <resultMap id="SysUserRoleExtMap" type="com.study.model.ext.SysUserRoleExt" extends="com.study.dao.base.SysUserRoleMapper.BaseResultMap">
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="role" property="role" jdbcType="VARCHAR" />
    </resultMap>
    <select id="listRoles" resultMap="SysUserRoleExtMap" parameterType="java.lang.String">
        SELECT
         ur.*,r.name,r.role
         from
         sys_user_role ur,sys_role r
         WHERE
          ur.role_id = r.id and r.del_mark = '0' and r.use_mark = 'Y' and ur.user_id = #{userId}
    </select>
</mapper>