<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.study.dao.ext.SysRoleMenuExtMapper">
    <resultMap id="SysRoleMenuExtMap" type="com.study.model.ext.SysRoleMenuExt" extends="com.study.dao.base.SysRoleMenuMapper.BaseResultMap">
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="permission" property="permission" jdbcType="VARCHAR" />
    </resultMap>
    <select id="listMenus" resultMap="SysRoleMenuExtMap" parameterType="java.lang.String">
       SELECT
       rm.*,m.name,m.permission
       from
       sys_role_menu rm,sys_menu m
       WHERE
       rm.menu_id = m.id and m.del_mark = '0' and rm.role_id
       IN(
       SELECT ur.role_id from sys_user_role ur WHERE ur.user_id = #{userId}
       )
    </select>
</mapper>